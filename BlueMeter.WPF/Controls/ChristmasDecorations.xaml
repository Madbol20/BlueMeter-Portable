<UserControl
    x:Class="BlueMeter.WPF.Controls.ChristmasDecorations"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    IsHitTestVisible="False"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!-- Easing Functions -->
        <SineEase x:Key="SineEaseInOut" EasingMode="EaseInOut" />

        <!-- Snowflake falling animation -->
        <Storyboard x:Key="SnowfallAnimation" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Canvas.Top)">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="-50" />
                <LinearDoubleKeyFrame KeyTime="0:0:15" Value="650" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0" />
                <LinearDoubleKeyFrame KeyTime="0:0:2" Value="0.8" />
                <LinearDoubleKeyFrame KeyTime="0:0:13" Value="0.8" />
                <LinearDoubleKeyFrame KeyTime="0:0:15" Value="0" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Christmas lights twinkling animation -->
        <Storyboard x:Key="TwinkleAnimation" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0.3" />
                <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="1.0" />
                <LinearDoubleKeyFrame KeyTime="0:0:1" Value="0.3" />
                <LinearDoubleKeyFrame KeyTime="0:0:1.5" Value="0.8" />
                <LinearDoubleKeyFrame KeyTime="0:0:2" Value="0.3" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>

    <Grid x:Name="RootGrid" ClipToBounds="False">
        <!-- Snowflake Canvas - bound to parent size to cover entire area -->
        <Canvas
            x:Name="SnowCanvas"
            Width="{Binding ActualWidth, ElementName=RootGrid}"
            Height="{Binding ActualHeight, ElementName=RootGrid}"
            Panel.ZIndex="50"
            ClipToBounds="False" />

        <!-- Christmas Lights at the top -->
        <Image
            x:Name="ChristmasLights"
            Height="32"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Opacity="0.8"
            Panel.ZIndex="100"
            Source="pack://application:,,,/Assets/Themes/Christmas/Decorations/christmas_lights.png"
            Stretch="Fill" />

        <!-- Santa Hat removed - now placed directly in MainView for overflow support -->

        <!-- Bell at Bottom-Right -->
        <Image
            Width="28"
            Height="28"
            Margin="0,0,8,8"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Opacity="0.85"
            Panel.ZIndex="98"
            Source="pack://application:,,,/Assets/Themes/Christmas/Decorations/bell.png">
            <!-- Subtle swing animation -->
            <Image.RenderTransform>
                <RotateTransform x:Name="BellRotation" Angle="0" />
            </Image.RenderTransform>
            <Image.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation
                                Storyboard.TargetName="BellRotation"
                                Storyboard.TargetProperty="Angle"
                                From="-5"
                                To="5"
                                Duration="0:0:1.5"
                                AutoReverse="True"
                                EasingFunction="{StaticResource SineEaseInOut}" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
        </Image>
    </Grid>
</UserControl>
