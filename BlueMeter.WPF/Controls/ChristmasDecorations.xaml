<UserControl
    x:Class="BlueMeter.WPF.Controls.ChristmasDecorations"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    IsHitTestVisible="False"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!-- Snowflake falling animation -->
        <Storyboard x:Key="SnowfallAnimation" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Canvas.Top)">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="-50" />
                <LinearDoubleKeyFrame KeyTime="0:0:15" Value="650" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0" />
                <LinearDoubleKeyFrame KeyTime="0:0:2" Value="0.8" />
                <LinearDoubleKeyFrame KeyTime="0:0:13" Value="0.8" />
                <LinearDoubleKeyFrame KeyTime="0:0:15" Value="0" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Christmas lights twinkling animation -->
        <Storyboard x:Key="TwinkleAnimation" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity">
                <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0.3" />
                <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="1.0" />
                <LinearDoubleKeyFrame KeyTime="0:0:1" Value="0.3" />
                <LinearDoubleKeyFrame KeyTime="0:0:1.5" Value="0.8" />
                <LinearDoubleKeyFrame KeyTime="0:0:2" Value="0.3" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>

    <Grid>
        <!-- Christmas Lights at the top -->
        <Image
            x:Name="ChristmasLights"
            Height="32"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Opacity="0.8"
            Panel.ZIndex="100"
            Source="pack://application:,,,/Assets/Themes/Christmas/Decorations/christmas_lights.png"
            Stretch="Fill" />

        <!-- Snowflake Canvas -->
        <Canvas x:Name="SnowCanvas" ClipToBounds="True" />

        <!-- Corner Decorations -->
        <Grid>
            <!-- Top-Left: Star -->
            <Image
                Width="48"
                Height="48"
                Margin="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Opacity="0.9"
                Panel.ZIndex="99"
                Source="pack://application:,,,/Assets/Themes/Christmas/Decorations/star.png" />

            <!-- Top-Right: Ornament -->
            <Image
                Width="32"
                Height="32"
                Margin="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Opacity="0.9"
                Panel.ZIndex="99"
                Source="pack://application:,,,/Assets/Themes/Christmas/Decorations/christmas_ornament_gold.png" />

            <!-- Bottom-Left: Ornament -->
            <Image
                Width="32"
                Height="32"
                Margin="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Opacity="0.9"
                Panel.ZIndex="99"
                Source="pack://application:,,,/Assets/Themes/Christmas/Decorations/christmas_ornament_red.png" />

            <!-- Bottom-Right: Candy Cane -->
            <Image
                Width="24"
                Height="48"
                Margin="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Opacity="0.9"
                Panel.ZIndex="99"
                Source="pack://application:,,,/Assets/Themes/Christmas/Decorations/candy_cane.png" />
        </Grid>
    </Grid>
</UserControl>
